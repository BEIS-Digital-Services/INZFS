                    </label>
                </div>
            </div>
        </div>*@

    <div class="govuk-form-group @(ViewData.ModelState.IsValid ? "" : "govuk-form-group--error")" asp-validation-error-class-for="@Model.Question">
        <label class="govuk-label govuk-label--l">
            @Model.Question
        </label>
        <fieldset class="govuk-fieldset" aria-describedby="timing-hint">
            <div class="govuk-radios govuk-radios--inline" asp-validation-error-class-for="@Model.Question">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="@Model.FieldName" name="DataInput" type="radio" value=1>
                    <label class="govuk-label govuk-radios__label">
                        Yes
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="@Model.FieldName" name="DataInput" type="radio" value=0>
                    <label class="govuk-label govuk-radios__label">
                        No
                    </label>
                </div>
            </div>
        </fieldset>
    </div>

    <div class="edit-item-secondary group">
        <div class="edit-item-actions form-group">
            <button type="submit" name="submit.Publish" class="btn btn-success publish govuk-button" value="submit.Publish">Continue</button>
        </div>
    </div>
</form>

