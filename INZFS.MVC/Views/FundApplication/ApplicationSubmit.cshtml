@model CommonModel
@using INZFS.MVC.Models.DynamicForm

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">Submit application</h1>

    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <p class="govuk-body">By submitting, you are confirming that the information you've given is correct, to the best of your knowledge.</p>
        <p class="govuk-body">You can download a copy of your application before you submit.</p>
        <p class="govuk-body">This will be packaged as a zip file including:</p>

        <p class="govuk-body">This will be a zip file containing:</p>
        <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-9">
            <li>a copy of your answers</li>
            <li>any additional documents you've uploaded</li>
        </ul>



        <a asp-area="INZFS.MVC" asp-controller="FundApplication" asp-action="complete" class="govuk-button" data-module="govuk-button">
                Accept and send application
        </a>

        <br>

        <a asp-controller="Report" asp-action="DownloadPdf" class="govuk-button govuk-button--secondary" data-module="govuk-button">
                Download your application
        </a>

        <p class="govuk-body-m"><a class="govuk-link" asp-controller="Report" asp-action="DownloadOdt">Download an accessible text version</a></p>

        <p class="govuk-body-s">
            <a asp-area="INZFS.MVC" asp-controller="FundApplication" asp-action="section"
               asp-route-pagename="application-overview"
               class="govuk-link govuk-!-font-weight-regular">Go back to your application</a>
        </p>

    </div>

</div>
