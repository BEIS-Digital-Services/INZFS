    <div class="govuk-form-group @(ViewData.ModelState.IsValid ? "" : "govuk-form-group--error")" asp-validation-error-class-for="@Model.Question">
        <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l govuk-!-margin-bottom-6">
                <h1 class="govuk-fieldset__heading">
                    @if (string.IsNullOrEmpty(Model.TitleQuestion))
                    {
                        @Model.Question

                    }
                    else
                    {
                        @Model.TitleQuestion
                    }
                </h1>                
            </legend>
            <div class="govuk-radios govuk-radios--conditional" data-module="govuk-radios">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="organisation" name="org-type" type="radio" value="organisation">
                    <label class="govuk-label govuk-radios__label" for="organisation">
