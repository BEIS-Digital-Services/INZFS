@* As you can see the model here is the view model object this time not a ShapeViewModel<T>. *@

@model ProjectDetailsViewModel
@using INZFS.MVC.ViewModels
@using INZFS.MVC.Models
@using INZFS.MVC.TagHelpers

@* Nothing special here regarding the editor fields. However, notice that the Biography (ContentField) editor is not
    here, because (as mentioned) it has its own editor and display shape so no need to worry about that. *@

<a class="govuk-back-link" asp-area="INZFS.MVC" asp-controller="FundApplication" asp-action="section" asp-route-pagename="project-summary">
    Back
</a>

<input type="hidden" name="contentType" value="ProjectDetailsPart" />

<div class="govuk-form-group" asp-validation-error-class-for="Summary"  data-maxlength="200">
    <label class="govuk-label govuk-label--l" asp-for="Summary">
    </label>
    <span asp-validation-for="Summary" class="govuk-error-message"></span>
    <textarea class="govuk-textarea" asp-for="Summary" rows="5" aria-describedby="summary-hint"></textarea>

    <div id="with-hint-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
        You can enter up to 200 characters
    </div>
</div>


<div class="govuk-form-group" asp-validation-error-class-for="Timing">
    <label class="govuk-label govuk-label--l" asp-for="Timing">
    </label>
    <fieldset class="govuk-fieldset" aria-describedby="timing-hint">
        <div class="govuk-radios govuk-radios--inline">
            <div class="govuk-radios__item">
                <input class="govuk-radios__input" asp-for="Timing" type="radio" value="1">
                <label class="govuk-label govuk-radios__label" asp-for="Timing">
                    Yes
                </label>
            </div>
            <div class="govuk-radios__item">
                <input class="govuk-radios__input" asp-for="Timing" type="radio" value="0">
                <label class="govuk-label govuk-radios__label" asp-for="Timing">
                    No
                </label>
            </div>
        </div>
    </fieldset>
</div>