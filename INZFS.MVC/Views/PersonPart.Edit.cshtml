<input type="hidden" name="contentType" value="PersonPage" />
<div class="govuk-form-group" asp-validation-class-for="Name">
    <label class="govuk-label" asp-for="Name">
        @T["Name"]
    </label>
    <div id="name-hint" class="govuk-hint">
        @T["Person's name"]
    </div>
    <span asp-validation-for="Name" class="govuk-error-message"></span>
    <input class="govuk-input govuk-input--width-10" asp-for="Name" spellcheck="false" aria-describedby="name-hint">
</div>

<div class="govuk-form-group" asp-validation-class-for="BirthDateUtc">
    <label class="govuk-label" asp-for="BirthDateUtc">
        @T["Birth date"]
    </label>
    <div id="birth-date-hint" class="govuk-hint">
        @T["Birth date"]
    </div>
    <span asp-validation-for="BirthDateUtc" class="govuk-error-message"></span>
    <input class="govuk-input govuk-input--width-10" type="date" asp-for="BirthDateUtc" aria-describedby="birth-date-hint">
</div>

<div class="govuk-form-group" asp-validation-class-for="Handedness">
    <label class="govuk-label" asp-for="Handedness">
        @T["Handedness"]
    </label>
    <div id="handedness-hint" class="govuk-hint">
        @T["Handedness"]
    </div>
    <span asp-validation-for="Handedness" class="govuk-error-message"></span>
    <select asp-for="Handedness" asp-items="Html.GetEnumSelectList<Handedness>()" class="govuk-select govuk-input--width-10" aria-describedby="handedness-hint"></select>
</div>

