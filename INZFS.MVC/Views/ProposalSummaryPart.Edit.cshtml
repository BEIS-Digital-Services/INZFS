@* As you can see the model here is the view model object this time not a ShapeViewModel<T>. *@

@model ProposalSummaryPartViewModel
@using INZFS.MVC.ViewModels
@using INZFS.MVC.Models

@* Nothing special here regarding the editor fields. However, notice that the Biography (ContentField) editor is not
    here, because (as mentioned) it has its own editor and display shape so no need to worry about that. *@


<input type="hidden" name="contentType" value="ProposalSummaryPart" />
<div class="govuk-form-group" asp-validation-class-for="ProjectName">
    <label class="govuk-label" asp-for="ProjectName">
    </label>
    @*<div id="name-hint" class="govuk-hint">
            @T["Project name"]
        </div>*@
    <span asp-validation-for="ProjectName" class="govuk-error-message"></span>
    <input class="govuk-input govuk-input--width-10" asp-for="ProjectName" spellcheck="false" aria-describedby="name-hint">
</div>

<div class="govuk-form-group" asp-validation-class-for="EstimatedStartDateUtc">
    <label class="govuk-label" asp-for="EstimatedStartDateUtc">
    </label>
    @*<div id="estimated-start-hint" class="govuk-hint">
            @T["Estimated Start date"]
        </div>*@
    <span asp-validation-for="EstimatedStartDateUtc" class="govuk-error-message"></span>
    <input class="govuk-input govuk-input--width-10" type="date" asp-for="EstimatedStartDateUtc" aria-describedby="estimated-start-hint">
</div>

<div class="govuk-form-group" asp-validation-class-for="ProjectDuration">
    <label class="govuk-label" asp-for="ProjectDuration">
    </label>
    @*<div id="project-duration-hint" class="govuk-hint">
            @T["Project Duration"]
        </div>*@
    <span asp-validation-for="ProjectDuration" class="govuk-error-message"></span>
    <input class="govuk-input govuk-input--width-10" asp-for="ProjectDuration" spellcheck="false" aria-describedby="project-duration-hint">
</div>

<div class="govuk-form-group" asp-validation-class-for="Summary">
    <label class="govuk-label" asp-for="Summary">
    </label>
    @*<div id="summary-hint" class="govuk-hint">
            @T["Project Summary"]
        </div>*@
    <span asp-validation-for="Summary" class="govuk-error-message"></span>
    <textarea class="govuk-textarea" asp-for="Summary" rows="5" aria-describedby="summary-hint"></textarea>
</div>
