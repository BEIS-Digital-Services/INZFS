@model INZFS.Theme.ViewModels.ForgotPasswordViewModel
@{
    ViewLayout = "LayoutRegistration";
    ViewData["Title"] = "Forgotten your password";
}

<partial name="_ErrorModelSummary" />

<main class="govuk-main-wrapper " id="main-content" role="main">
    <form method="post">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">@ViewData["Title"]</h1>
                <p class="govuk-body govuk-!-font-weight-bold">Enter your email address to be sent a link to reset your password</p>
                <div class="govuk-form-group" asp-validation-error-class-for="EmailAddress">
                    <label class="govuk-label" asp-for="EmailAddress">
                        Your email address
                    </label>
                    <span asp-validation-for="EmailAddress" class="govuk-error-message"></span>
                    <input class="govuk-input govuk-input--width-20" asp-for="EmailAddress" type="text" spellcheck="false" autocomplete="email">
                </div>
                <button class="govuk-button" data-module="govuk-button">Continue</button>
                <p class="govuk-body-s"><a asp-area="INZFS.Theme" asp-controller="Registration" asp-action="Register" asp-route-returnurl="@Url.GetQuery("ReturnUrl")">Register as a new user</a></p>
                <p class="govuk-body-s"><a class="govuk-link" href="#">Need help signing in or creating an account?</a></p>
            </div>
        </div>
    </form>
</main>