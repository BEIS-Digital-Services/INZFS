@model INZFS.Theme.ViewModels.ForgotPasswordViewModel
@{
    ViewLayout = "LayoutRegistration";
    ViewData["Title"] = "Confirmation for password reset";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <form method="post" asp-action="ForgotPassword" asp-controller="Account">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">@ViewData["Title"]</h1>
                <p class="govuk-body">
                    We have sent you a link to reset your password
                </p>
                <input asp-for="EmailAddress" type="hidden"/>
                <button class="govuk-button" data-module="govuk-button">Resend email</button>
            </div>
        </div>
    </form>
</main>