@model INZFS.Theme.ViewModels.ResetPasswordViewModel
@{
    ViewLayout = "LayoutRegistration";
    ViewData["Title"] = "New password";
}

<partial name="_ErrorModelSummary" />

<main class="govuk-main-wrapper " id="main-content" role="main">
    <form method="post">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">@ViewData["Title"]</h1>
                <p class="govuk-body">
                    You can update your new password
                </p>
                <div class="govuk-form-group" asp-validation-error-class-for="NewPassword">
                    <label class="govuk-label" asp-for="NewPassword">
                        New password
                    </label>
                    <span asp-validation-for="NewPassword" class="govuk-error-message"></span>
                    <input class="govuk-input govuk-input--width-20" asp-for="NewPassword"  type="password" spellcheck="false" aria-describedby="event-name-hint" autocomplete="Off">
                </div>
                <div class="govuk-form-group" asp-validation-error-class-for="ConfirmPassword">
                    <label class="govuk-label" asp-for="ConfirmPassword">
                        Confirm your new password
                    </label>
                    <span asp-validation-for="ConfirmPassword" class="govuk-error-message"></span>
                    <input class="govuk-input govuk-input--width-20" asp-for="ConfirmPassword" type="password" spellcheck="false" autocomplete="Off">
                </div>
                <button class="govuk-button" data-module="govuk-button">Update password</button>
            </div>
        </div>
    </form>
</main>