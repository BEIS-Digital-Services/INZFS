
@model INZFS.Theme.ViewModels.AuthLoginViewModel
@{
    ViewLayout = "LayoutRegistration";
    ViewData["Title"] = "Current password";
    ViewData["Breadcrumbs"] = new INZFS.Theme.Models.BreadcrumbsModel() {IsDisplay = false};
}

<partial name="_ErrorModelSummary" />

<main class="govuk-main-wrapper " id="main-content" role="main">
    <form method="post">
        <div class="govuk-grid-row">

            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">@ViewData["Title"]</h1>
                <div class="govuk-form-group govuk-!-margin-bottom-2" asp-validation-error-class-for="CurrentPassword">
                    <span asp-validation-for="CurrentPassword" class="govuk-error-message"></span>
                    <label class="govuk-label" for="password-current">
                        Enter your current password
                    </label>
                    <div class="show-password__input-wrapper govuk-!-margin-bottom-6">
                        <input class="govuk-input govuk-input--width-20" id="password-current" asp-for="CurrentPassword" type="password" spellcheck="false">
                        <button class="show-password__toggle password-changer" data-control="password-current" aria-controls="password-current" type="button" aria-label="Show password" id="buttonText">Show</button>
                        <span class="govuk-visually-hidden" aria-live="polite">Your password is hidden</span>
                    </div>
                </div>
                <button class="govuk-button" data-module="govuk-button">
                    Continue
                </button>
            </div>
        </div>
    </form>
</main>
<script src="/INZFS.Theme/lib/password-changer.js"></script>