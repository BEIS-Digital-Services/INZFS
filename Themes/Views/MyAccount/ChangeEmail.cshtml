@model INZFS.Theme.ViewModels.ChangeEmailViewModel
@{
    ViewLayout = "LayoutRegistration";
    ViewData["Title"] = "Change your email";
    ViewData["Breadcrumbs"] = new INZFS.Theme.Models.BreadcrumbsModel() { IsDisplay = false };
}

<partial name="_ErrorModelSummary" />

<main class="govuk-main-wrapper " id="main-content" role="main">
    <form method="post">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">@ViewData["Title"]</h1>
                <p class="govuk-body">You currently login and get an access code sent to: <strong>@Model.CurrentEmail</strong>. To change you will need to re-verify your email address</p>
                <div class="govuk-form-group govuk-!-margin-bottom-2" asp-validation-error-class-for="Password">
                    <span asp-validation-for="Password" class="govuk-error-message"></span>
                    <label class="govuk-label" for="password-current">
                        Enter your current password
                    </label>
                    <div class="show-password__input-wrapper govuk-!-margin-bottom-6">
                        <input class="govuk-input govuk-input--width-20" id="password-current" asp-for="Password" type="password" spellcheck="false">
                        <button class="show-password__toggle password-changer" data-control="password-current" aria-controls="password-current" type="button" aria-label="Show password" id="buttonText" onclick="currentPassword()">Show</button>
                        <span class="govuk-visually-hidden" aria-live="polite">Your password is hidden</span>
                    </div>
                </div>
                <div class="govuk-form-group" asp-validation-error-class-for="Email">
                    <span asp-validation-for="Email" class="govuk-error-message"></span>
                    <label class="govuk-label" for="email">
                        New email address
                    </label>
                    <div id="email-hint" class="govuk-hint">
                        Add your new email address
                    </div>
                    <input class="govuk-input govuk-input--width-20" id="email" asp-for="Email" type="email" spellcheck="false" aria-describedby="email-hint" autocomplete="Email">
                </div>
                <div class="govuk-form-group" asp-validation-error-class-for="ConfirmEmail">
                    <span asp-validation-for="ConfirmEmail" class="govuk-error-message"></span>
                    <label class="govuk-label" for="emailconfirm">
                        Confirm your email address
                    </label>
                    <input class="govuk-input govuk-input--width-20" id="emailconfirm" asp-for="ConfirmEmail" type="email" spellcheck="false" autocomplete="ConfirmEmail">
                </div>
                <button class="govuk-button" data-module="govuk-button">Change your email and verify</button>
            </div>
        </div>
    </form>
</main>
<script src="/INZFS.Theme/lib/password-changer.js"></script>