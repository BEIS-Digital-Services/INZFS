@model OrchardCore.Users.ViewModels.ChangePasswordViewModel

@{
    ViewLayout = "Layout__Login";
}

<form asp-controller="Account" asp-action="ChangePassword" method="post" class="form-horizontal">
    <h4>@T["Change password"]</h4>
    <hr />
    <div asp-validation-summary="All" class="govuk-error-message" id="validationSummary"></div>
    <div class="govuk-form-group">
        <label asp-for="CurrentPassword" class="col-md-4 control-label">@T["Current password"]</label>
        <div class="col-md-8">
            <input asp-for="CurrentPassword" class="govuk-input" autofocus />
            <span asp-validation-for="CurrentPassword" class="govuk-error-message"></span>
        </div>
    </div>
    <div class="govuk-form-group">
        <label asp-for="Password" class="col-md-4 control-label">@T["New password"]</label>
        <div class="col-md-8">
            <input asp-for="Password" class="govuk-input" />
            <div id="passwordStrength"></div>
            <span asp-validation-for="Password" class="govuk-error-message"></span>
        </div>
    </div>
    <div class="govuk-form-group">
        <label asp-for="PasswordConfirmation" class="col-md-4 control-label">@T["New password confirmation"]</label>
        <div class="col-md-8">
            <input asp-for="PasswordConfirmation" class="govuk-input" />
            <span asp-validation-for="PasswordConfirmation" class="govuk-error-message"></span>
        </div>
    </div>
    <div class="govuk-form-group">
        <div class="col-md-offset-4 col-md-8">
            <button type="submit" class="govuk-button">@T["Change password"]</button>
        </div>
    </div>
</form>
<script src="~/js/ErrorValidation.js"></script>
