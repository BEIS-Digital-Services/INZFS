@page "/registerToAttend/{slug}"
@inject OrchardCore.IOrchardHelper Orchard

@{
    var govpage = await Orchard.GetContentItemByHandleAsync($"alias:{Slug}");

}

@Orchard.ConsoleLog(govpage)

<body class="govuk-template__body competition-overview">
	<div class="govuk-width-container">

		<main class="govuk-main-wrapper " id="main-content" role="main">

			<div class="govuk-grid-row">
				<div class="govuk-grid-column-two-thirds">
					<h1 class="govuk-heading-xl">@govpage.DisplayText</h1>
				</div>
			</div>


			<div class="govuk-grid-row">

                <div class="govuk-grid-column-two-thirds">

                    <p class="govuk-body-l">@govpage.Content.GovPage.GovMainInfo.Text</p>


                    <h2 class="govuk-heading-l">@govpage.Content.GovPage.govukheadingm.Text</h2>

                    <p class="govuk-body-l">The Energy Entrepreneurs Fund (EEF) supports innovative carbon-reduction technology through capital grants of up to £1 million.</p>

                    <p class="govuk-body">The Fund is open to UK organisations of any size, in both the public and private sector. It is particularly focused on helping small and medium-sized businesses, including start-ups. To be eligible for the grant, your proposal needs to address the Government’s 2050 Net Zero carbon targets, or security of UK energy supply. </p>

                    <p class="govuk-body">The one-hour session will include: </p>

                    <p class="govuk-body">A jargon-free overview of the Energy Entrepreneurs Fund (EEF) including eligibility and process for application Hear from Colm Watling, an Innovation Consultant and former regional manager at Innovate UK. Colm will share his knowledge and expertise about the EEF and the keys to a successful bid application. A ‘been there, done it’ view of the funding application, from Robert Edwards, Chief Executive at Solar Polar Limited. An interactive session where businesses can put forward and share ideas about projects that fit the call and where there are opportunities for other businesses and organisations to come in as collaboration partners Access to support post session to put together a bid.</p>

                    <h3 class="govuk-heading-m">@govpage.Content.GovPage.govukheadingm2.Text</h3>

                    <p class="govuk-body">To register for the event please email <a class="govuk-link" href="#">contact.eef@beis.gov.uk</a> with the subject line “Event registration”, your name and contact information and we will be in contact with you.</p>

                </div>
				<div class="govuk-grid-column-one-third">

                    <aside class="app-related-items" role="complementary">
                        <h3 class="govuk-heading-s" id="subsection-title">Event info</h3>
                        <p class="govuk-body-m govuk-colour--mid-grey govuk-!-margin-bottom-0">@govpage.Content.GovDate.ContentItems[0].DisplayText</p>
                        <p class="govuk-body-m govuk-!-margin-bottom-0">@govpage.Content.GovDate.ContentItems[0].InputPart.DefaultValue</p>
                    </aside>

				</div>
			</div>
		</main>
	</div>
	<script src="~/js/govuk-frontend-3.12.0.min.js"></script>
	<script>
		window.GOVUKFrontend.initAll()
	</script>

</body>

@functions
{
    [FromRoute]
    public string Slug { get; set; }
}

